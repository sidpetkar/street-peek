{
  "extends": "next/core-web-vitals",
  "rules": {
    // Disable TypeScript-specific rules that might be too strict
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    
    // Disable React-specific rules that might cause issues
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "off",
    
    // Disable Next.js-specific rules that might be too strict
    "@next/next/no-img-element": "off",
    
    // Other rules that might cause build issues
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "public/",
    "**/*.d.ts"
  ]
} 